<!-- Head -->
<%- include('../partials/head')  %>
<link rel="stylesheet" href="../../../css/styles.css">
<link rel="stylesheet" href="../../../css/header.css">
<link rel="stylesheet" href="../../../css/footer.css">
</head>

<body>
    <!-- Inicio de Cabecera del Sitio -->
    <%- include('../partials/header') %>

    <!-- Inicio del Main del Sitio -->
    <main>

        <!-- Seccion tipo tarjetas con Categorias de Productos -->
        <div class="container products-wrapper">
            <div class="row">
                <div id="man">
                    <div class="col-12">
                        <h2 class="products-title">NIÃ‘OS</h2>
                    </div>
                    <% products.forEach((product) => { %>
                        <% if (product.category_id == 3) { %>
                            <div class="col-12 col-sm-6 col-lg-3">
                                <section class="product-box">
                                    <a href="/products/detail/<%= product.id %> ">
                                    <figure class="product-box_image">
                                        <img src="/images/<%= product.product_img %>" width=15% alt="imagen de producto">
                                    </figure>
                                    <article class="product-box_data">
                                        <p><%= product.name %></p>
                                        <h2> <%= product.price %> </h2>
                                    </article>
                                    </a>
                                </section>
                            </div>
                        <% } %>
                    <% }) %>
                </div>


            </div>
        </div>
    </main>

    <!-- Footer del Sitio -->
    <%- include('../partials/footer') %>

</body>

</html>