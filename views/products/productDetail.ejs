<!-- Head -->
<%- include('../partials/head')%>
    <link rel="stylesheet" href="../../css/styles.css">
    <link rel="stylesheet" href="../../css/header.css">
    <link rel="stylesheet" href="../../css/footer.css">
    <link rel="stylesheet" href="../../css/productDetail.css">
</head>

<body>
<!-- Inicio de Cabecera del Sitio -->
<%- include('../partials/header')%>
    <main>
        <section class="container_detalle">
            <div class="path">
                <h6>Home / Categoria / Producto</h6>
            </div>
                
            <div class="detalle_producto">
                <div class="foto_detalle">
                    <img src="/images/<%= product.image %> " alt="" class="fotodetalle">
                </div>
            

                <div class="texto_detalle">

                    <h1> <%= product.name %> </h1>

                    <h2> <%= product.price %>  </h2>

                    <p> <%= product.description %>  </p>

                    <div class="listacolor">
                        <h3>COLOR</h3>
                        <select name="color" id="seleccionar_color">
                                <option value="negro">Negro</option>
                                <option value="azul">Azul</option>
                                <option value="blanco">Blanco</option>
                        </select>
                    </div>


                    <div class= "listatalle">
                        <h3>TALLE</h3>
                        <select name="color" id="seleccionar_color">
                                <option value="S">S</option>
                                <option value="M">M</option>
                                <option value="L">L</option>
                        </select>
                    </div>


                    <div class="botoncompra">
                        <input type="submit" class="submit" value="Agregar al carrito">
                        <a href="/products/edit/<%= product.id %> ">Editar</a>
                        <form action="/products/delete/<%= product.id%>" method="POST">
                            <button type="submit" class="button-delete">Eliminar</button>
                        </form>
                    </div>
                        
                </div>             
            </div> 
        </section>
 
    </main>
    

    <%- include('../partials/footer')%>

</body>
</html>